<PropertyList>
  
  <path>asi.ac</path>
  
  <animation>
    <object-name>fond</object-name>   
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <object-name>index</object-name>
    
    <object-name>vitre</object-name>
  </animation>
  
  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Tu-134/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <object-name>index</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
    <interpolation>
      <entry><ind>   0.00 </ind><dep>   3 </dep></entry>
      <entry><ind>  81.00 </ind><dep>  12 </dep></entry>
      <entry><ind> 108.00 </ind><dep>  29 </dep></entry>
      <entry><ind> 162.00 </ind><dep>  66 </dep></entry>
      <entry><ind> 215.98 </ind><dep> 106 </dep></entry>
      <entry><ind> 270.00 </ind><dep> 149 </dep></entry>
      <entry><ind> 378.00 </ind><dep> 230 </dep></entry>
      <entry><ind> 540.00 </ind><dep> 353 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>index</object-name>
    <property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
    <!-- <property>tu154/instrumentation/pn-6/at-kt</property> -->
    <interpolation>
      <entry><ind>   0.00 </ind><dep>   3 </dep></entry>
      <entry><ind>  81.00 </ind><dep>  12 </dep></entry>
      <entry><ind> 108.00 </ind><dep>  29 </dep></entry>
      <entry><ind> 162.00 </ind><dep>  66 </dep></entry>
      <entry><ind> 215.98 </ind><dep> 106 </dep></entry>
      <entry><ind> 270.00 </ind><dep> 149 </dep></entry>
      <entry><ind> 378.00 </ind><dep> 230 </dep></entry>
      <entry><ind> 540.00 </ind><dep> 353 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
</PropertyList>

<!-- Autopilot tablo for Tu-134 3D instrument for Tu-134-->
<PropertyList>
  
  <path>ap.ac</path>
  
  <animation>
    <object-name>fond</object-name>
    <object-name>Ap_bok</object-name>
    <object-name>Ap_prod</object-name>
    <object-name>Kurs</object-name>
    <object-name>Gliss</object-name>
    <object-name>Zk</object-name>
    <object-name>At</object-name>
    <object-name>Vor</object-name>
    <object-name>Kv</object-name>
    <object-name>Anu</object-name>
    
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>fond</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>
  
  <!--Tablo staff-->
  <animation>
    <type>select</type>
    <object-name>Ap_prod</object-name>
    <condition>
      <property>/controls/instrumental/ap_prod</property>
    </condition>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>Ap_prod</object-name>
    <condition>
      <property>/controls/instrumental/ap_prod</property>
    </condition>
    <emission>
      <factor-prop>/controls/instrumental/ap_prod</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>Ap_bok</object-name>
    <condition>
      <property>/controls/instrumental/ap_bok</property>

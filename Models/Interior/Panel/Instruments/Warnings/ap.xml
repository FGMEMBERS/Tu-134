  <!-- Autopilot tablo for Tu-134 3D instrument for Tu-134-->
<PropertyList>

  <path>ap.ac</path>
  
  <animation>
    <object-name>fond</object-name>

  </animation>

  <animation>
    <type>material</type>
    <object-name>fond</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <!--Tablo staff-->
  <animation>
    <type>select</type>
    <object-name>Ap_prod</object-name>
    <condition>
      <property>tu134/controls/instrumental/ap_prod</property>
    </condition>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Ap_prod</object-name>
    <condition>
      <property>tu134/controls/instrumental/ap_prod</property>
    </condition>
    <emission>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
      <factor-prop>tu134/controls/instrumental/ap_prod</factor-prop>
    </emission>
  </animation>


<!-- Comm radio control 3D instrument for Tu-154 -->
<PropertyList>
  
  <path>at.ac</path>
  
  <animation>
    <object-name>fond</object-name>
    <object-name>At_btn</object-name>
    <object-name>Sg1_btn</object-name>
    <object-name>Sg2_btn</object-name>
    <object-name>atlight</object-name>
    <object-name>Pwr_sw</object-name>
    <object-name>Drv_sw</object-name>
    
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>At_btn</object-name>
    <object-name>Sg1_btn</object-name>
    <object-name>Sg2_btn</object-name>
    <object-name>atlight</object-name>
    <object-name>Pwr_sw</object-name>
    <object-name>Drv_sw</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>
  
</PropertyList>

<!-- UM-1 Mach indicator
3D instrument for Tu-154 -->
<PropertyList>
 <path>um-1.ac</path>
<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>text</object-name>
  <object-name>needle</object-name>
  <emission>
    <red-prop>tu154/light/instruments/int-red</red-prop>
    <green-prop>tu154/light/instruments/int-green</green-prop>
    <blue-prop>tu154/light/instruments/int-blue</blue-prop>
  </emission>
</animation>

<!-- External instruments lighting -->
<animation>
  <type>material</type>
  <object-name>base</object-name>
  <emission>
    <red-prop>tu154/light/panel/ext-red</red-prop>
    <green-prop>tu154/light/panel/ext-green</green-prop>
    <blue-prop>tu154/light/panel/ext-blue</blue-prop>
  </emission>
</animation>




<!--Needle-->
<animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>velocities/mach</property>
    <interpolation>
      <entry><ind>	0.0</ind>	<dep>	36.0</dep></entry>
      <entry><ind>	0.3</ind>	<dep>	145.0</dep></entry>
      <entry><ind>	0.4</ind>	<dep>	180.0</dep></entry>
      <entry><ind>	0.65</ind>	<dep>	270.0</dep></entry>
      <entry><ind>	0.9</ind>	<dep>	360.0</dep></entry>
      <entry><ind>	1.0</ind>	<dep>	396.0</dep></entry>
    </interpolation>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>


</PropertyList>

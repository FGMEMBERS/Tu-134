<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>nezinterieur</object-name>
    <object-name>planchet</object-name>
    <object-name>inttour</object-name>
    <object-name>inttournoze0</object-name>
    <object-name>intporte</object-name>
    <object-name>inttourporte</object-name>
    <object-name>cloison</object-name>
    
    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitreporte</object-name>
    <object-name>intvitresnoze0</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Tu-134/Models/Effects/Glass/glass</inherits-from>
    <object-name>intvitres</object-name>
    <object-name>intvitreporte</object-name>
    <object-name>intvitresnoze0</object-name>
  </effect>
  
  <!-- Les sieges -->
  <model>
    <name>Seats</name>
    <path>Aircraft/Tu-134/Models/Interior/Seats/All-Seats.xml</path>
  </model>

  <animation>
    <type>material</type>
    <object-name>interieur</object-name>
    <object-name>planchet</object-name>
    <object-name>inttour</object-name>
    <object-name>inttournoze0</object-name>
    <object-name>intporte</object-name>
    <object-name>inttourporte</object-name>
    <object-name>cloison</object-name>
    <object-name>Seats</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.5 </red>
      <green> 0.5 </green>
      <blue>  0.5 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>inttournoze0</object-name>
    <object-name>nezinterieur</object-name>
    <object-name>intvitresnoze0</object-name>
    <condition>
      <equals>
        <property>sim/multiplay/generic/int[8]</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>

  <!-- Pilote -->
  <!--
  <model>
    <path>Aircraft/Tu-134/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -15.27948 </x-m>
      <y-m>  -0.54000 </y-m>
      <z-m>  -0.94552 </z-m>
    </offsets>
  </model>
  -->

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Tu-134/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -16.056 </x-m>
      <y-m>   0.000 </y-m>
      <z-m>  -0.872 </z-m>
    </offsets>
  </model>

<animation>
  <type>rotate</type>
  <object-name>yoke_l1</object-name>
  <property>controls/flight/aileron</property>
  <factor>50</factor>
  <center>
    <x-m>0</x-m>
    <y-m>-0.564</y-m>
    <z-m>0.027</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>yoke_l1</object-name>
  <object-name>yoke_l2</object-name>
  <property>controls/flight/elevator</property>
  <factor>6</factor>
  <center>
    <x-m>0.375</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.65</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>yoke_r1</object-name>
  <property>controls/flight/aileron</property>
  <factor>50</factor>
  <center>
    <x-m>0</x-m>
    <y-m>0.564</y-m>
    <z-m>0.027</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>yoke_r1</object-name>
  <object-name>yoke_r2</object-name>
  <property>controls/flight/elevator</property>
  <factor>6</factor>
  <center>
    <x-m>0.375</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.65</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

  <!-- OverHead -->
  <model>
    <path>Aircraft/Tu-134/Models/Interior/Panel/Overhead/overhead.xml</path>
    <offsets>
      <x-m> -15.40492 </x-m>
      <y-m>   0.00000 </y-m>
      <z-m>  -0.12425 </z-m>
    </offsets>
  </model>

  <!-- Porte -->
  <animation>
    <name>IntLaPorte</name>
    <object-name>intporte</object-name>
    <object-name>inttourporte</object-name>
    <object-name>intvitreporte</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>IntLaPorte</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntLaPorte</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep>  0 </dep></entry>
      <entry><ind> 0.2 </ind><dep>  0 </dep></entry>
      <entry><ind> 1.0 </ind><dep> 65 </dep></entry>
    </interpolation>
    <center>
      <x-m> -13.055 </x-m>
      <y-m>   0.000 </y-m>
      <z-m>  -1.188 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>IntLaPorte</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> 0.00 </dep></entry>
      <entry><ind> 0.2 </ind><dep> 0.08 </dep></entry>
      <entry><ind> 1.0 </ind><dep> 0.08 </dep></entry>
    </interpolation>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

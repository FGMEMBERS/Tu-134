<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

  <fx>

    <!-- Engine 1 -->
    <engine>
      <name>start</name>
      <mode>once</mode>
      <path>Aircraft//Tu-134//Sounds/start.wav</path>
      <condition>
        <property>/controls/engines/engine[0]/starter</property>
      </condition>
      <volume>
        <property>engines/engine[0]/thrust-lbs</property>
        <factor>0.000012</factor>
        <min>0.1</min>
        <max>0.2</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
   </engine>

    <engine>
      <name>shutdown</name>
      <mode>once</mode>
      <path>Aircraft/Tu-134/Sounds/shutdown.wav</path>
      <condition>
        <property>/controls/engines/engine[0]/cutoff</property> 
      </condition>
      <volume>
        <factor>0.2</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </engine>

    <engine>
      <name>engine</name>
      <path>Aircraft/Tu-134/Sounds/running.wav</path>
      <mode>looped</mode>
      <condition>
        <property>/engines/engine[0]/running</property>
      </condition>
      <orientation>
        <x>0.0</x>
        <y>0.0</y>
        <z>-180.0</z>
        <inner-angle>180.0</inner-angle>
        <outer-angle>360.0</outer-angle>
        <outer-gain>0.2</outer-gain>
      </orientation>
      <volume>
        <property>engines/engine[0]/thrust-lbs</property>
        <factor>0.000025</factor>
        <min>0.2</min>
        <max>0.75</max>
      </volume>
      <pitch>
        <property>engines/engine[0]/n1</property>
        <ofset>0.1</ofset>
        <factor>.001</factor>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </engine>

    <engine>
      <name>whine</name>
      <path>Aircraft/Tu-134/Sounds/whine.wav</path>
      <mode>looped</mode>
      <condition>
        <property>/engines/engine[0]/running</property>
      </condition>
      <volume>
        <property>engines/engine[0]/thrust-lbs</property>
        <factor>0.010</factor>
        <max>1.0</max>
      </volume>
      <pitch>
        <property>engines/engine[0]/n1</property>
        <factor>0.01</factor>
        <offset>0.15</offset>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </engine>


<?xml version="1.0" encoding="ISO-8859-1"?> 

<!--

Modified by lastmin-II, 07.2015:
- Added views for captain's instruments and magnetic compass.
- Modified view for both pilots.

-->

<PropertyList>

  <chase-distance-m type="double" archive="y"> -40 </chase-distance-m>

  <view n="100">
    <name>Passenger View</name>
    <internal archive="y">true</internal>
    <type>lookfrom</type>
    <config>
      <from-model type="bool">true</from-model>
      <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
      <x-offset-m archive="y"> -0.58628 </x-offset-m> <!-- Right -->
      <y-offset-m archive="y"> -0.98396 </y-offset-m> <!-- Up    -->
      <z-offset-m archive="y"> -4.06650 </z-offset-m> <!-- Back  -->
      <pitch-offset-deg> 0 </pitch-offset-deg>
      <default-field-of-view-deg> 60 </default-field-of-view-deg>
      <dynamic-view type="bool">true</dynamic-view>
    </config>
  </view>

  <view n="101">
    <name>Tail Camera View</name>
    <type>lookfrom</type>
    <internal archive="y">true</internal>
    <config>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.01f</ground-level-nearplane-m>
      <x-offset-m archive="y">  0.000 </x-offset-m> <!--Right-->
      <y-offset-m archive="y">  6.252 </y-offset-m> <!--Up-->
      <z-offset-m archive="y"> 15.832 </z-offset-m> <!--Back-->
      <pitch-offset-deg> -5 </pitch-offset-deg>
      <default-field-of-view-deg type="double"> 30 </default-field-of-view-deg>
    </config>
  </view>

  <view n="102">
    <name>First Officer Seat View</name>
    <internal archive="y">true</internal>
    <type>lookfrom</type>
    <config>
      <from-model type="bool">true</from-model>
      <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
      <x-offset-m archive="y">   0.54000 </x-offset-m> <!-- Right -->
      <y-offset-m archive="y">  -0.50500 </y-offset-m> <!-- Up    -->
      <z-offset-m archive="y"> -15.17172 </z-offset-m> <!-- Back  -->
      <pitch-offset-deg> -10 </pitch-offset-deg>
      <default-field-of-view-deg> 63 </default-field-of-view-deg>
      <dynamic-view type="bool">true</dynamic-view>
    </config>
  </view>

  <view n="103">
    <name>Instruments View</name>
    <type>lookfrom</type>
    <internal archive="y">true</internal>
    <config>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.01f</ground-level-nearplane-m>
      <x-offset-m archive="y">  -0.54000 </x-offset-m> <!-- Right -->
      <y-offset-m archive="y">  -0.67204 </y-offset-m> <!-- Up    -->
      <z-offset-m archive="y"> -15.07172 </z-offset-m> <!-- Back  -->
      <pitch-offset-deg> -5 </pitch-offset-deg>
      <default-field-of-view-deg type="double"> 44 </default-field-of-view-deg>
    </config>
  </view>

  <view n="104">
    <name>Compass View</name>
    <type>lookfrom</type>
    <internal archive="y">true</internal>
    <config>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.01f</ground-level-nearplane-m>
      <x-offset-m archive="y">  -0.54000 </x-offset-m> <!-- Right -->
      <y-offset-m archive="y">  -0.50000 </y-offset-m> <!-- Up    -->
      <z-offset-m archive="y"> -15.17172 </z-offset-m> <!-- Back  -->
      <pitch-offset-deg> 0.5 </pitch-offset-deg>
      <heading-offset-deg> -30 </heading-offset-deg>
      <default-field-of-view-deg type="double"> 12 </default-field-of-view-deg>
    </config>
  </view>

  <view n="0">
    <name>Captain Seat View</name>
    <internal archive="y">true</internal>
    <config>
      <x-offset-m archive="y">  -0.54000 </x-offset-m> <!-- Right -->
      <y-offset-m archive="y">  -0.50500 </y-offset-m> <!-- Up    -->
      <z-offset-m archive="y"> -15.17172 </z-offset-m> <!-- Back  -->
      <pitch-offset-deg> -10 </pitch-offset-deg>
      <default-field-of-view-deg> 63 </default-field-of-view-deg>
    </config>
  </view>

  <view n="1">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="2">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="3">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="4">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="5">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="6">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

</PropertyList>

<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

  <chase-distance-m type="double" archive="y"> -40 </chase-distance-m>

  <view n="100">
    <name>Copilote Seat View</name>
    <internal archive="y">true</internal>
    <type>lookfrom</type>
    <config>
      <from-model type="bool">true</from-model>
      <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
      <x-offset-m archive="y">   0.47156 </x-offset-m> <!-- Right -->
      <y-offset-m archive="y">  -0.42604 </y-offset-m> <!-- Up    -->
      <z-offset-m archive="y"> -15.17172 </z-offset-m> <!-- Back  -->
      <pitch-offset-deg> 2 </pitch-offset-deg>
      <default-field-of-view-deg> 80 </default-field-of-view-deg>
      <dynamic-view type="bool">true</dynamic-view>
    </config>
  </view>

  <view n="101">
    <name>Navigator View</name>
    <type>lookfrom</type>
    <internal archive="y">true</internal>
    <config>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.01f</ground-level-nearplane-m>
      <x-offset-m archive="y">   0.0 </x-offset-m> <!--Right-->
      <y-offset-m archive="y">  -1.2 </y-offset-m> <!--Up-->
      <z-offset-m archive="y"> -16.8 </z-offset-m> <!--Back-->
      <pitch-offset-deg> -5 </pitch-offset-deg>
      <default-field-of-view-deg type="double"> 50 </default-field-of-view-deg>
    </config>
  </view>

  <view n="102">
    <name>Passanger View</name>
    <internal archive="y">true</internal>
    <type>lookfrom</type>
    <config>
      <from-model type="bool">true</from-model>
      <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
      <x-offset-m archive="y"> -0.58628 </x-offset-m> <!-- Right -->
      <y-offset-m archive="y"> -0.98396 </y-offset-m> <!-- Up    -->
      <z-offset-m archive="y"> -4.06650 </z-offset-m> <!-- Back  -->
      <pitch-offset-deg> 0 </pitch-offset-deg>
      <default-field-of-view-deg> 60 </default-field-of-view-deg>
      <dynamic-view type="bool">true</dynamic-view>
    </config>
  </view>

  <view n="0">
    <name>Capitan Seat View</name>
    <internal archive="y">true</internal>
    <config>
      <x-offset-m archive="y">  -0.47156 </x-offset-m> <!-- Right -->
      <y-offset-m archive="y">  -0.42604 </y-offset-m> <!-- Up    -->
      <z-offset-m archive="y"> -15.17172 </z-offset-m> <!-- Back  -->
      <pitch-offset-deg> -10 </pitch-offset-deg>
      <default-field-of-view-deg> 80 </default-field-of-view-deg>
    </config>
  </view>

  <view n="1">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="2">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="3">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="4">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="5">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="6">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

</PropertyList>

<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

  <sim include="Nasal/views.xml">

    <description>Tu 134 (YASim)</description>
    <author>Emmanuel BARANGER (3D/FDM), Artem Kovalchuk (FDM)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>

    <fuel-fraction>1.0</fuel-fraction>

    <startup>
      <splash-texture>Aircraft/Tu-134/tu134-splash.png</splash-texture>
    </startup>

    <sound>
      <path archive="y">Aircraft/Tu-134/Sounds/tu134-sound.xml</path>
    </sound>

   <flaps>
     <setting> 0.00 </setting>
     <setting> 0.25 </setting>
     <setting> 0.50 </setting>
     <setting> 0.75 </setting>
     <setting> 1.00 </setting>
   </flaps>
  
    <model>
      <path>Aircraft/Tu-134/Models/tu134.xml</path>
      <livery>
        <file type="string">default</file>
        <noze>0</noze>
      </livery>
    </model>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int" n="0">  0 </int>                                           <!--  0 immat -->
        <int type="int" n="1">  0 </int>                                           <!--  1 immat -->
        <int type="int" n="2">  0 </int>                                           <!--  2 immat -->
        <int type="int" n="3">  0 </int>                                           <!--  3 immat -->
        <int type="int" n="4">  0 </int>                                           <!--  4 immat -->
        <int type="int" n="5">  0 </int>                                           <!--  5 immat -->
        <int type="bool" n="6" alias="/smoke/active"> 0 </int>                     <!--  6 start smoke -->
        <int type="int" n="7" alias="/smoke/particlepersec"> 50 </int>             <!--  7 particlepersec -->
        <int type="int" n="8" alias="/sim/model/Livery/noze"> 1 </int>                    <!--  8 Noze type -->
        <int type="int" n="10" alias="/controls/armament/trigger">0</int>          <!-- 10 reserved for bombable mode -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
        <float n="2" alias="/position/gear-agl-m">  0 </float>                     <!--  2 altitude for MP shadow -->
        <float n="3" alias="/position/altitude-ft">  0 </float>                    <!--  3 altitude for smoke -->
        <float n="6" alias="/engines/engine[0]/n2" />
        <float n="7" alias="/engines/engine[1]/n2" />
        <float n="8" alias="/controls/engines/engine[0]/throttle" />
        <float n="9" alias="/controls/engines/engine[1]/throttle" />
        <string n="0" type="string" />
        <string n="9" type="string" />                                             <!-- string[9] reserved for bombable mode -->
      </generic>
    </multiplay>

    <help>
      <title>Tu 134</title>
      <key>
        <name>d</name>
        <desc>Open/Close door</desc>
      </key>
      <key>
        <name>j</name>
        <desc>Spoiler down</desc>
      </key>
      <key>
        <name>k</name>
        <desc>Spoiler up</desc>
      </key>
    </help>

    <menubar include="Dialogs/tu134-menu.xml"/>

    <systems>
      <electrical>
        <path>Aircraft/Generic/generic-electrical.xml</path>
      </electrical>
    </systems>  

  </sim>
 
  <instrumentation>
    <idr-1>
      <caged-flag type="bool" >true</caged-flag>
    </idr-1>
  </instrumentation>
  
  <input>
    <keyboard include="Nasal/tu134-keyboard.xml"/>
  </input>
 
  <controls>
    <gear>
      <brake-parking type="double">1</brake-parking>
    </gear>
  </controls>
 
  <nasal>
    <doors>
      <file>Aircraft/Tu-134/Nasal/doors.nas</file>
    </doors>
    <tu134>
      <file>Aircraft/Tu-134/Nasal/light.nas</file>
      <file>Aircraft/Tu-134/Nasal/liveries.nas</file>
      <file>Aircraft/Tu-134/Nasal/altimeter.nas</file>
<!--  <file>Aircraft/Tu-134/Nasal/immat.nas</file> -->
    </tu134>
    <instruments>
      <file>Aircraft/Tu-134/Nasal/idr.nas</file>
    </instruments>
    <engines>
      <file>Aircraft/Generic/Engines/generic-yasim-engine.nas</file>
      <file>Aircraft/Tu-134/Nasal/engines-yasim.nas</file>
    </engines>
  </nasal>
   
</PropertyList>
